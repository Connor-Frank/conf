# Themes
borderwidth 5
color activeborder "#05bc79"
color inactiveborder "#666666"
color groupborder "#262a33"
color ungroupborder "#666666"
color menubg "#262a33"
color menufg "#e5e5e5"
color font "#e5e5e5"
color selfont "#666666"

# Set font
fontname "Hermit:size=10"

# Don't assign membership when opening
sticky yes

# Bar
ignore        termbar
autogroup 0   termbar

# C = Control, M = ALT, S = Shift, 4 = Mod4 (Windows Key)
unbind CMS-q
unbind CM-f

bind-key M-Return		"xterm -geometry 125x40"
bind-key 4-d        "dmenu_run"

bind-key 4S-q			  quit
bind-key 4M-r       restart
bind-key 4S-f			  window-fullscreen
bind-key 4-Return   maximize
bind-key 4-q			  window-close
bind-key 4-j			  window-cycle
bind-key 4-k			  window-rcycle
bind-key 4-1			  group-only-1
bind-key 4-2			  group-only-2
bind-key 4-3			  group-only-3
bind-key 4-4			  group-only-4
bind-key 4-5			  group-only-5
bind-key 4-6			  group-only-6
bind-key 4-7			  group-only-7
bind-key 4-8			  group-only-8
bind-key 4-9			  group-only-9
bind-key 4S-1			  window-movetogroup-1
bind-key 4S-2			  window-movetogroup-2
bind-key 4S-3			  window-movetogroup-3
bind-key 4S-4			  window-movetogroup-4
bind-key 4S-5			  window-movetogroup-5
bind-key 4S-6			  window-movetogroup-6
bind-key 4S-7			  window-movetogroup-7
bind-key 4S-8			  window-movetogroup-8
bind-key 4S-9			  window-movetogroup-9

# Applications
bind-key 4-w            firefox
bind-key 4-o            libreoffice
bind-key 4-backslash    keepassxc
bind-key 4-g            gimp
bind-key 4-s			      scrot
bind-key 4-m			      maxvol
bind-key 4-f			      "xterm -e mc"
bind-key 4-p			      "xterm -geometry 90x35 -e cmus"

# Mouse bindings
bind-mouse 4-1			window-move
bind-mouse 4-3			window-resize

# Applications Menu
command Firefox firefox
command LibreOffice libreoffice
command GIMP gimp
